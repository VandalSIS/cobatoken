# Environment variables for COBA Token website

# Site configuration
NEXT_PUBLIC_SITE_URL=https://cobatoken.com
NEXT_PUBLIC_SITE_NAME="COBA Token"

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS=GA_MEASUREMENT_ID
NEXT_PUBLIC_GOOGLE_TAG_MANAGER=GTM_ID

# API endpoints (if needed)
NEXT_PUBLIC_API_URL=https://api.cobatoken.com
API_SECRET_KEY=your_api_secret_key

# Email service (for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@cobatoken.com
SMTP_PASS=your_email_password

# Database (if needed)
DATABASE_URL=postgresql://username:password@localhost:5432/cobatoken

# Third-party services
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Social media
NEXT_PUBLIC_TWITTER_HANDLE=@cobatoken
NEXT_PUBLIC_TELEGRAM_URL=https://t.me/cobatoken

# Feature flags
NEXT_PUBLIC_ENABLE_STAKING=true
NEXT_PUBLIC_ENABLE_TRADING=true
NEXT_PUBLIC_MAINTENANCE_MODE=false
